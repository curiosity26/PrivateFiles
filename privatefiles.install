function privatefiles_schema() {
  $schema = array();

  $schema['privatefiles'] = array(
    'fields' => array(
      'id' => array(
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE
      ),
      'fid' => array(
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE
      ),
      'created' => array(
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE
      ),
      'security_level' => array(
        'type' => 'varchar',
        'length' => 10,
        'not null' => TRUE,
        'default' => 'url'
      ),
      'users' => array(
        'type' => 'text',
        'size' => 'small',
        'serialize' => TRUE,
        'not null' => FALSE
      ),
      'roles' => array(
        'type' => 'text',
        'size' => 'small',
        'serialize' => TRUE,
        'not null' => FALSE
      ),
      'expiration_date' => array(
        'type' => 'datetime',
        'not null' => FALSE
      )
    ),
    'primary key' => array('id'),
    'unique keys' => array(
      'id_fid' => array('fid')
    ),
    'foreign keys' => array(
      'fid' => array(
        'table' => 'file',
        'columns' => array(
          'fid' => 'fid'
        )
      )
    )
  );

  return $schema;
}

function privatefiles_install() {
  $salt = mhash(MHASH_SHA1, mt_rand(1000000));
  variable_set('privatefiles_salt', $salt);
  if (drupal_realpath('private://') === FALSE) {
    drupal_set_message(
      t('The private file path is not configured. This will prevent file uploads via the Private Files module. @link',
      array('@link' => l('Configure Private File Path', 'admin/config/media/file-system'))), 'error', TRUE);
  }
}

function privatefiles_uninstall() {
  variable_del('privatefiles_salt');
}